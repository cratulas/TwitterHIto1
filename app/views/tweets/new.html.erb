<p id="notice"><%= notice %></p>

<h2>My Friends</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nickname</th>
            <th>Perfil picture</th>
            <th>Unfollow</th>
        </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.nick_name %></td>
                <td><img src="<%= user.profile_picture %> " class="mr-3" style="width: 5rem;" alt="perfil_picture"></td>
                <td></td>
            <tr>
        <% end %>      
    </tbody>
</table>

        



<h2>People you might meet </h2>


<table class="table">
    <thead>
        <tr>
            <th>Nickname</th>
            <th>Perfil picture</th>
            <th>Follow</th>
        </tr>
    </thead>

    <tbody>
        <% @users_not.each do |user| %>
            <% if  current_user.id  != user.id %>
            <tr>
                <td><%= user.nick_name %></td>
                <td><img src="<%= user.profile_picture %> " class="mr-3" style="width: 5rem;" alt="perfil_picture"></td>
                <td><%= link_to " ",  friends_new_path(id_friend: user.id ), class: "far fa-heart" , method: :post %>  </td>
                

            <tr>
            <% end %>  
        <% end %>      
    </tbody>
</table>


